---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';

const blogs = [
  { title: 'Exploit on Mango Markets', description: 'Deep dive into how Mango was exploited', slug: 'mango-markets-hack' },
  { title: 'Solend Flash Loan Hack', description: 'Understanding the attack vector used in Solend', slug: 'solend-flash-loan' },
];
---

<BaseLayout title="Dashboard">
  <h2>Analytics Dashboard</h2>
  <p>This section can show charts and insights (you can later embed components from D3, Chart.js, or server-rendered API stats).</p>

  <h2>Latest Solana Hack Reports</h2>
  {blogs.map(blog => (
    <Card {...blog} />
  ))}
</BaseLayout>
